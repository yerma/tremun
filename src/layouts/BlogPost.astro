---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<script src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs" type="module"></script>
		<style>
			main {
				/*width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;*/
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 100vw;
				color: rgb(var(--gray-dark));
			}

			.prose :slotted(p) {
				margin-bottom: 1em;
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 0 auto 32px;
			}

			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}

			:global(.under-sea) {
				background: rgb(25,63,87);
				background: linear-gradient(0deg, rgba(25,63,87,1) 40%, rgba(39,93,113,1) 100%);
				margin-bottom: 40px;
				padding-bottom: 200px;
				color: white;
				position: relative;
			}

			:global(.under-sea .sand) {
				position: absolute;
				bottom: 0;
				left: 0;
				width: 100vw;
			}

			:global(.under-sea *:not(.sand, .trash)) {
				position: relative;
				z-index: 2;
			}

			:global(.under-sea .trash) {
				position: absolute;
				bottom: 100%;
				left: 0;
				animation: fall 15s ease-out infinite;
				transition: all 0.5s ease-out;
				opacity: 0;
			}

			:global(.under-sea .trash:nth-of-type(1)) {
				left: 10%;
				animation-delay: 0s;
			}
			:global(.under-sea .trash:nth-of-type(2)) {
				left: 60%;
				animation-delay: 2s;
			}
			:global(.under-sea .trash:nth-of-type(3)) {
				left: 50%;
				animation-delay: 4s;
			}
			:global(.under-sea .trash:nth-of-type(4)) {
				left: 30%;
				animation-delay: 8s;
			}
			:global(.under-sea .trash:nth-of-type(5)) {
				left: 20%;
				animation-delay: 10s;
			}
			:global(.under-sea .trash:nth-of-type(6)) {
				left: 40%;
				animation-delay: 12s;
			}

			@keyframes fall {
				0% {
					bottom: 50%;
					opacity: 0;
					transform: rotate(-40deg);
				}

				30% {
					opacity: 0;
				}

				100% {
					bottom: 10px;
					opacity: 1;
					transform: rotate(40deg);
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
